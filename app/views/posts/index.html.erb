

<h1>Physical Health Channel</h1>
<p>This channel is about all things physical health and exercise related.</p>
<br><br>


    <% @posts.reverse_each do |post| %>
    <div class='card'>
      <h3 class='card-header' style='background-color:#BAE4F5'><%= post.title %></h3>
        <p class='card-text' style='padding: 10px'><%= post.description %></p>
        <%if current_user==post.user%>
            <%= link_to 'Edit', edit_post_path(post), :class=>"btn btn-outline-primary" %>
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-outline-danger" %>
        <%end%>
        <p class='card-footer text-center' style='padding: 10px'>
        <%# Code for user profile picture %>
        <%if User.where(email: post.user.email).first.avatar.attached? %>
          <%= image_tag url_for(User.where(email: post.user.email).first.avatar), class:"rounded-circle", size: 40 %>
        <%else%>
        <%#  Default image referenced from https://www.business2community.com/social-media/importance-profile-picture-career-01899604%>
          <%= image_tag("default_profile", height:40, width: 40, class: 'rounded-circle')%>
        <%end%>
        by <%= post.user.email %></p>

    </div>

    <br><br>
    <% end %>

<br>

