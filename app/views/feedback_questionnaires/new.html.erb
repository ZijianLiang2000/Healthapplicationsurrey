<h1>New Feedback Questionnaire</h1>

<%# New form view will be switched to according to the day of week it is created %>
<%if @dayOfWeek == "Monday" %>
    <%= render 'form_monday', feedback_questionnaire: @feedback_questionnaire %>
<%end%>
<%if @dayOfWeek == "Tuesday" %>
    <%= render 'form_tuesday', feedback_questionnaire: @feedback_questionnaire %>
<%end%>
<%if @dayOfWeek == "Wednesday" %>
    <%= render 'form_wednesday', feedback_questionnaire: @feedback_questionnaire %>
<%end%>
<%if @dayOfWeek == "Thursday" %>
    <%= render 'form_thursday', feedback_questionnaire: @feedback_questionnaire %>
<%end%>
<%if @dayOfWeek == "Friday" %>
    <%= render 'form_friday', feedback_questionnaire: @feedback_questionnaire %>
<%end%>
<%if @dayOfWeek == "Saturday" %>
    <%= render 'form_saturday', feedback_questionnaire: @feedback_questionnaire %>
<%end%>
<%if @dayOfWeek == "Sunday" %>
    <%= render 'form_sunday', feedback_questionnaire: @feedback_questionnaire %>
<%end%>
<%= link_to 'Back', feedback_questionnaires_path %>
