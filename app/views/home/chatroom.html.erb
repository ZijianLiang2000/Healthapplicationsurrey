<h1>Chatroom</h1>
<p>Ongoing Chat:</p>
    <br>
    <span id="chat"></span>
    <hr>
    Message:
    <br>
    <textarea id="msg" style="width:380px; height: 80px;"></textarea>
    <hr>
    <button id="send" class='btn btn-outline-success'>Send Message</button>

<br>


 <script>

      function getCookie(name) {
        const value = `; ${document.cookie}`;
        const parts = value.split(`; ${name}=`);
        if (parts.length === 2) 
           unusable_email=parts.pop().split(';').shift();
        email_part=unusable_email.split('%40')[0]
        return email_part+':'
      }
       $(document).ready(function(){

            /* RECEIVE MESSAGE */
            App.chat.received = function(data)
            {
                $("#chat").append(data['message']+"<br>")
            }

            $("#send").click(function(){
                msg = $("#msg").val()

                /* SEND MESSAGE */
                App.chat.send_msg(getCookie('user_email')+msg)
            })
        })
</script>